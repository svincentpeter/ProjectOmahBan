# ============================================
# APPLICATION SETTINGS
# ============================================
# Nama aplikasi yang akan ditampilkan di title/header
APP_NAME="Omah Ban POS"

# Environment: local (development), staging, production
# PRODUCTION: Ganti ke "production"
APP_ENV=local

# Key enkripsi aplikasi - JANGAN SHARE KE PUBLIK!
APP_KEY=

# Debug mode: true = tampilkan error detail (development only!)
# PRODUCTION: WAJIB false!
APP_DEBUG=true

# URL utama aplikasi
# PRODUCTION: Ganti ke URL domain Anda, contoh: https://pos.omahban.id
APP_URL=http://localhost

# ============================================
# DEBUGGING & LOGGING
# ============================================
# Laravel Debugbar: true = aktifkan debug toolbar
# PRODUCTION: false
DEBUGBAR_ENABLED=false

# Log channel: single, daily, stack, slack
LOG_CHANNEL=stack

# Log level: emergency, alert, critical, error, warning, notice, info, debug
# PRODUCTION: warning atau error
LOG_LEVEL=debug

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Tipe database: mysql, pgsql, sqlite, sqlsrv
DB_CONNECTION=mysql

# Host database (localhost untuk lokal)
DB_HOST=127.0.0.1

# Port MySQL (default: 3306)
DB_PORT=3306

# Nama database yang digunakan
DB_DATABASE=project_omah_ban

# Username database
DB_USERNAME=root

# Password database
DB_PASSWORD=

# ============================================
# DRIVERS & CACHING
# ============================================
# Broadcast driver: pusher, redis, log, null
BROADCAST_DRIVER=log

# Cache driver: file, redis, memcached, database
# RUMAHWEB: Gunakan "file" atau "database"
CACHE_DRIVER=file

# Filesystem driver: local, public, s3
FILESYSTEM_DRIVER=local

# Queue connection: sync, database, redis, sqs
# RUMAHWEB: Gunakan "database" jika mau background jobs
# Dengan "sync", semua job dijalankan langsung (tidak ada queue)
QUEUE_CONNECTION=sync

# Session driver: file, cookie, database, redis
# RUMAHWEB: Gunakan "file" atau "database"
SESSION_DRIVER=file

# Session lifetime dalam menit (120 = 2 jam)
SESSION_LIFETIME=120

# Session domain (kosongkan untuk auto-detect domain)
SESSION_DOMAIN=

# Secure cookie: false untuk http, true untuk https
# PRODUCTION: true (pastikan pakai HTTPS)
SESSION_SECURE_COOKIE=false

# Same site cookie policy: lax, strict, none
SESSION_SAME_SITE=lax

# ============================================
# CACHE SERVICES (Optional)
# ============================================
# Memcached host
MEMCACHED_HOST=127.0.0.1

# Redis configuration (Tidak tersedia di Rumahweb shared hosting)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================
# EMAIL CONFIGURATION
# ============================================
# Mail driver: smtp, sendmail, mailgun, ses
MAIL_MAILER=smtp

# SMTP host untuk email
# RUMAHWEB: Biasanya mail.domain.com
MAIL_HOST=mailhog

# SMTP port (465 untuk SSL, 587 untuk TLS)
MAIL_PORT=1025

# SMTP username (biasanya email lengkap)
MAIL_USERNAME=null

# SMTP password
MAIL_PASSWORD=null

# Enkripsi: tls, ssl, null
MAIL_ENCRYPTION=null

# Email pengirim default
MAIL_FROM_ADDRESS=null

# Nama pengirim default
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# PUSHER/WEBSOCKET (Real-time features)
# ============================================
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1
MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ============================================
# PDF GENERATION (wkhtmltopdf)
# ============================================
# Path ke binary wkhtmltopdf untuk generate PDF
# RUMAHWEB: Tanyakan path ke support, biasanya /usr/bin/wkhtmltopdf
SNAPPY_PDF_BINARY=/usr/bin/wkhtmltopdf

# Path ke binary wkhtmltoimage untuk generate image dari HTML
SNAPPY_IMAGE_BINARY=/usr/bin/wkhtmltoimage

# ============================================
# MIDTRANS PAYMENT GATEWAY
# ============================================
# PRODUCTION: Ganti ke kredensial production Midtrans
MIDTRANS_MERCHANT_ID=
MIDTRANS_CLIENT_KEY=
MIDTRANS_SERVER_KEY=
MIDTRANS_IS_PRODUCTION=false
MIDTRANS_IS_SANITIZED=true
MIDTRANS_IS_3DS=true

# ============================================
# FONTEE (WhatsApp Notification Service)
# ============================================
FONTEE_API_KEY=
FONTEE_CHANNEL_ID=
FONTEE_NOTIFICATION_TYPE=whatsapp
FONTEE_WEBHOOK_SECRET=
FONTEE_TIMEOUT=30
FONTEE_RETRY_ATTEMPTS=3
FONTEE_RETRY_DELAY_MS=1000
FONTEE_RETRY_DELAY_SECONDS=60

# ========================================
# WhatsApp Baileys Integration
# ========================================
WHATSAPP_DRIVER=baileys
BAILEYS_SERVICE_URL=http://localhost:3001
BAILEYS_API_KEY=
WHATSAPP_OWNER_PHONE=

# ============================================
# TEMPLATE SETTINGS PRODUCTION (COPY INI)
# ============================================
# Ketika deploy ke Rumahweb, copy settings ini:
#
# APP_ENV=production
# APP_DEBUG=false
# APP_URL=https://yourdomain.com
# LOG_LEVEL=warning
# SESSION_SECURE_COOKIE=true
# 
# Lalu jalankan:
# php artisan config:cache
# php artisan route:cache
# php artisan view:cache
